- if @post.errors.any?
  .alert.alert-error
    %h5 There were some errors:
    %ul
      - @post.errors.full_messages.each do |msg|
        %li
          = msg

= form_for @post do |f|
  .control-group
    =f.label :title
    =f.text_field :title

  .control-group
    =f.label :url
    =f.text_field :url

  .control-group
    =f.label :description
    =f.text_area :description, row: 5


  =f.submit @post.new_record? ? "create post" : "edit post", class: 'btn btn-primary'
